@{
    ViewBag.Title = "Cadastro";
}
@using LabMVCAula10_05.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        .quadro {
            margin: 10PX;
            padding: 10PX;
            width: 300px;
            height: auto;
            border: 2px solid black;
            position: relative;
            background-color: lightslategray;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

    </style>
</head>
<body>
    <h2>Cadastro de Cliente</h2>
    <div style="padding: 10px; background-color: lightsteelblue; border-radius: 10px ">
        <form style="">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" required>

            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf" required>

            <label for="endereco">Endereço:</label>
            <input type="text" id="endereco" name="endereco" required>

            <input type="submit" value="Cadastrar">
        </form>
    </div>
    <h2>Cadastrado de notas</h2>
    <div style="background-color: #BBDEFB; padding: 4px; border-radius: 10px">
        <form method="post" action="@Url.Action("Salvar", "Home")" style="padding:10px 2px; margin:4px">
                <div class="form-group">
                    <label for="nome">Aluno:</label>
                    <input class="form-control" type="text" id="Nome" name="Nome" value="@Model.Nome" required placeholder="Digite o nome do aluno">
                </div>
                <div class="form-group">
                    <label for="matricula">Matricula:</label>
                    <input class="form-control" type="text" id="Matricula" name="Matricula" value="@(Model.Matricula != 0 ? Model.Matricula.ToString() : "")" required placeholder="Digite a matrícula do aluno">
                </div>
                <div class="form-group">
                    <label for="notas">Notas:</label>
                    <input class="form-control" type="text" id="Notas" name="Notas" value="@Model.Notas" required placeholder="Digite as notas do aluno separadas por virgula">
                    <small id="emailHelp" class="form-text text-muted">Digite as 3 notas do aluno separadas por virgula</small>
                </div>
                <input class="btn btn-primary" type="submit" value="Cadastrar">
        </form>
    </div>
   
    <h2>Lista de notas cadastradas</h2>
    <div style="margin-top: 10px">
        <table>
            <tr>
                <th>Nome</th>
                <th>Notas</th>
                <th>Matrícula</th>
                <th>Média</th>
                <th>Situação</th>
                <th>Acao</th>
            </tr>
                @foreach (Aluno aluno in ViewBag.NotasAlunos)
                {
                        <tr>
                            <td>@aluno.Nome</td>
                            <td>@aluno.Notas</td>
                            <td>@aluno.Matricula</td>
                            <td>@aluno.Media</td>
                            <td>@aluno.Situacao</td>
                            <td>
                                <form method="post" action="@Url.Action("Excluir", "Home")">
                                    <input type="hidden" name="Matricula" value="@aluno.Matricula" />
                                    <button class="btn btn-danger" type="submit">Excluir</button>
                                </form>
                            </td>
                        </tr>

                }

        </table>
    </div>


</body>
</html>
