@model Execricio.WerbASPNET.Framework.SessionCookie.ViewModel.LoginViewModel

<div class="row">
    <div>
        <form>
            <h1>Login</h1>
            <hr>

            <div class="form-group mb-3">
                <label for="username">Usuário</label>
                <input type="text" class="form-control" id="username" placeholder="Usuário" value="@Model.Username">
            </div>

            <div class="w-100"></div>

            <div class="form-group mb-3">
                <label for="password">Senha</label>
                <input type="password" class="form-control" id="password" placeholder="Senha" value="@Model.Password">
            </div>

            <div class="w-100"></div>

            <div class="form-check">
                <label>
                    <input type="checkbox" checked="@Model.RememberMe"> Lembrar
                </label>
            </div>

            <div class="w-100"></div>

            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Entrar</button>
            </div>
        </form>
        <p></p>
        <p>Esqueceu sua senha? <a href="#">Clique aqui</a>.</p>
        <p>Ainda não tem cadastro? <a href="#">Clique aqui</a>.</p>
    </div>
</div>
