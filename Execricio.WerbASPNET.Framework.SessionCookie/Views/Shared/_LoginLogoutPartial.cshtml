@{
    string userDropdown = "Olá, Usuário";
    bool userLoged = false;
}

@if (userLoged)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@userDropdown<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li>@Html.ActionLink("Alterar Cadastro", "AlterarCadastro", "Usuario")</li>
                <li>@Html.ActionLink("Alterar Senha", "AlterarSenha", "Usuario")</li>
                <li>@Html.ActionLink("Sair", "Index", "Logout")</li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            @Html.ActionLink("Entrar", "Index", "Login")
        </li>
    </ul>
}
